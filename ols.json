{
	"$schema": "https://raw.githubusercontent.com/DanielGavin/ols/master/misc/ols.schema.json",
	"collections": [
		{ "name": "lib", "path": "lib" }
	],
	"enable_semantic_tokens": false,
	"enable_document_symbols": true,
	"enable_hover": true,
	"enable_snippets": true,
	"profile": "default",
	"profiles": [
		{ "name": "default", "checker_path": ["gui"]},
		{ "name": "linux_profile", "os": "linux", "checker_path": ["gui/main.odin"]},
		{ "name": "windows_profile", "os": "windows", "checker_path": ["gui"]}
	]
}
